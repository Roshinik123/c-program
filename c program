1.reverse tha array
#include <stdio.h>

int main() {
    // Write C code here
   int n;
   scanf("%d",&n);
   int arr[n];
   for(int i=0;i<n;i++)
   {
   scanf("%d",&arr[i]);
  }
   for(int i=n-1;i>=0;i--)
   {
       printf("%d",arr[i]);
}
    return 0;
}
2.count 0s and 1s
#include <stdio.h>

int main() {
    // Write C code here
   int n,arr[n],count0=0,count1=0;
   scanf("%d",&n);

   for(int i=0;i<n;i++)
   {
       scanf("%d",&arr[i]);
   }
   for(int i=0;i<n;i++)
   {
       if(arr[i]==0)
       count0++;
       else
       count1++;
   }
   printf("%d\n%d",count0,count1);

    return 0;
}
3.count less element than key element
#include <stdio.h>

int main() {
    // Write C code here
   int n,count=0,key;
   scanf("%d",&n);
   
   int arr[n];
   for(int i=0;i<n;i++)
   {
       scanf("%d ",&arr[i]);
  }
  scanf("%d",&key);
  
   for(int i=0;i<n;i++)
   {
       if(arr[i]<key)
       count++;
   }
   printf("%d",count);

}
4.repeated elements in sorted array
#include <stdio.h>

int main() {
    // Write C code here
   int n,search;
   scanf("%d",&n);
   
   int arr[n];
   for(int i=0;i<n;i++)
   {
       scanf("%d",&arr[i]);
  }
  
   for(int i=0;i<n;i++)
   {
       if(arr[i]==arr[i+1])
       {
           printf("%d",arr[i]);
       }
}
return 0;}
5. print the search element index
#include <stdio.h>

int main() {
    // Write C code here
   int n,search;
   scanf("%d",&n);
   
   int arr[n];
   for(int i=0;i<n;i++)
   {
       scanf("%d ",&arr[i]);
  }
  scanf("%d",&search);
  
   for(int i=0;i<n;i++)
   {
       if(arr[i]==search)
       {
           printf("%d",i);
       }
       else
       printf("-1");
   }
}
6.segregation of 0s and 1s
#include<stdio.h>  
int main()  
{  
    int n;  
    scanf("%d", &n);  
    int arr[n];  
    for(int i = 0; i < n; i++)  
        scanf("%d", &arr[i]);  
    for(int i = 0; i < n; i++)  
    {  
        for(int j = i + 1; j < n; j++)  
        {  
            if(arr[j] < arr[i])  
            {  
                int temp = arr[j];  
                arr[j] = arr[i];  
                arr[i] = temp;  
            }  
        }  
    }  
    for(int i = 0; i < n; i++)  
    {  
        printf("%d ", arr[i]);  
    }  
}  
7.sum of right side array
#include <stdio.h>
int main()
{
    int n;
    //size of array
    scanf("%d",&n);
    //array initialization
    int arr[n];
    for(int i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    for(int i=0;i<n-1;i++)
    {
        int sum=0;
        for(int j=i+1;j<n;j++)
        {
            sum+=arr[j];
        }
        printf("%d\t",sum);
        
    }
    printf("%d",arr[n-1]);
    return 0;
}
